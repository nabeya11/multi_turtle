<launch>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find multi_sim)/worlds/multi_field.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <include file="$(find multi_sim)/launch/spawn_tb3.launch">
    <arg name="tb3_name" value="tb3_0"/>
    <arg name="tb3_x_pos" value=" 1.0"/>
    <arg name="tb3_y_pos" value=" 2.0"/>
    <arg name="tb3_yaw" value=" 0.0"/>
  </include>

  <include file="$(find multi_sim)/launch/spawn_tb3.launch">
    <arg name="tb3_name" value="tb3_1"/>
    <arg name="tb3_x_pos" value=" 3.0"/>
    <arg name="tb3_y_pos" value=" 2.0"/>
    <arg name="tb3_yaw" value=" 0.0"/>
  </include>

  <include file="$(find multi_sim)/launch/spawn_tb3.launch">
    <arg name="tb3_name" value="tb3_2"/>
    <arg name="tb3_x_pos" value=" 2.0"/>
    <arg name="tb3_y_pos" value=" 3.0"/>
    <arg name="tb3_yaw" value=" 0.0"/>
  </include>

</launch>
