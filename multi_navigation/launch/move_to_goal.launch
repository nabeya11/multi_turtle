<launch>
  <!-- Arguments -->
  <arg name="tb3_name"  default="tb3_0"/>

  <arg name="init_pose_x" default="0.0"/>
  <arg name="init_pose_y" default="0.0"/>
  <arg name="init_pose_a" default="0.0"/>

  <remap from="/$(arg tb3_name)/map" to="/map"/>

  <group ns = "$(arg tb3_name)">
    <param name="tb3_name" value="$(arg tb3_name)" />

    <!-- AMCL -->
    <include file="$(find multi_navigation)/launch/amcl_with_map.launch">
        <arg name="tf_prefix" default="$(arg tb3_name)" />
        <arg name="init_pose_x" default="$(arg init_pose_x)"/>
        <arg name="init_pose_y" default="$(arg init_pose_y)"/>
        <arg name="init_pose_a" default="$(arg init_pose_a)"/>
    </include>

    <!-- move_to_goal -->
    <node pkg="multi_navigation" name="move_to_goal" type="move_to_goal.py">
    </node>

    <!-- goal broadcaster -->
    <node pkg="multi_navigation" name="goal_broadcaster" type="goal_broadcaster.py" output="screen">
    </node>

    <!-- avoid -->
    <node pkg="multi_navigation" name="avoid_collision" type="avoid_collision.py">
    </node>

    <!-- vel integrator -->
    <node pkg="multi_navigation" name="vel_publisher" type="vel_publisher.py"></node>

  </group>
</launch>
